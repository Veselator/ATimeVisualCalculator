<Window x:Class="ATimeVisualCalculator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ATimeVisualCalculator.ViewModels"
        xmlns:conv="clr-namespace:ATimeVisualCalculator.Converters"
        Title="AVTiC â€” A Visual Time Calculator"
        MinWidth="1000" MinHeight="600"
        Background="{StaticResource BgDarkBrush}"
        WindowState="Maximized"
        FontFamily="Segoe UI">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <conv:BoolToCellBrushConverter x:Key="BoolToCellBrush"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:NullToBoolConverter x:Key="NullToBool"/>
        <conv:HoursFormatConverter x:Key="HoursFormat"/>
        <conv:FilterTypeToStringConverter x:Key="FilterTypeToString"/>

        <!-- Storyboards for sidebar animation -->
        <Storyboard x:Key="OpenSidebar">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Tag"
                             To="280" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
            <!-- Main content -->
            <ColumnDefinition Width="*"/>
            <!-- Overview panel -->
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- ======== SIDEBAR ======== -->
        <Border Grid.Column="0"
                Background="{StaticResource BgSidebarBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0"
                ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sidebar header -->
                <StackPanel Grid.Row="0" Margin="16,16,16,8">
                    <TextBlock Text="Your Saves"
                               FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>
                </StackPanel>

                <!-- Saved calculations list -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Calculations}"
                         SelectedItem="{Binding SelectedCalculation}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Margin="8,0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                                Background="Transparent"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#1E1E2A"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#252538"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="0,0,0,0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="13"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                                <Button Grid.Column="1"
                                        Style="{StaticResource DeleteButton}"
                                        Command="{Binding DataContext.DeleteCalculationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="âœ•"
                                        FontSize="11"
                                        Padding="4,2"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Sidebar footer buttons -->
                <StackPanel Grid.Row="2" Margin="12,8,12,12" Orientation="Vertical">
                    <Button Style="{StaticResource AccentButton}"
                            Command="{Binding NewCalculationCommand}"
                            Content="ï¼‹ New Calculation"
                            Margin="0,4"
                            Padding="12,8"/>
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Style="{StaticResource BaseButton}"
                                Command="{Binding SaveCommand}"
                                Content="ðŸ’¾ Save"
                                Padding="8,7"/>
                        <Button Grid.Column="2"
                                Style="{StaticResource BaseButton}"
                                Command="{Binding LoadCommand}"
                                Content="ðŸ“‚ Load"
                                Padding="8,7"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ======== MAIN CONTENT ======== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <!-- Top bar -->
                <RowDefinition Height="Auto"/>
                <!-- Content -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar with hamburger + title -->
            <Border Grid.Row="0"
                    Background="{StaticResource BgSidebarBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="8,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hamburger menu button -->
                    <Button Grid.Column="0"
                            Style="{StaticResource IconButton}"
                            Command="{Binding ToggleSidebarCommand}"
                            FontSize="18"
                            Padding="8,4"
                            Margin="4,0">
                        <TextBlock Text="â˜°" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Button>

                    <!-- App title -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                        <TextBlock Text="AVTiC"
                                   FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlueBrush}"/>
                        <TextBlock Text=" â€” A Visual Time Calculator by Borys Solomka"
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </StackPanel>

                    <!-- Save shortcut -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,8,0">
                        <Button Style="{StaticResource IconButton}"
                                Command="{Binding SaveCommand}"
                                ToolTip="Save (Ctrl+S)"
                                Margin="4,0">
                            <TextBlock Text="ðŸ’¾" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main scrollable content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0">

                <!-- Empty state when no calculation selected -->
                <Grid Margin="24,20">
                    <TextBlock Text="No calculation selected. Create one from the sidebar."
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,80,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCalculation, Converter={StaticResource NullToBool}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Main content bound to SelectedCalculation -->
                    <Grid DataContext="{Binding SelectedCalculation}">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.SelectedCalculation, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource NullToBool}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <!-- Result section -->
                            <RowDefinition Height="Auto"/>
                            <!-- Separator -->
                            <RowDefinition Height="Auto"/>
                            <!-- Layers section -->
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                    <!-- ======== RESULT (Overall) SECTION ======== -->
                    <Border Grid.Row="0"
                            Background="{StaticResource BgCardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,16"
                            Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.2" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <!-- Title row -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="18" FontWeight="Bold"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                                <!-- Hour counters -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Foreground="{StaticResource AccentGreenBrush}" FontWeight="SemiBold" FontSize="13">
                                        <Run Text="+ "/>
                                        <Run Text="{Binding ResultGreenHours, Mode=OneWay, Converter={StaticResource HoursFormat}}"/>
                                    </TextBlock>
                                    <TextBlock Foreground="{StaticResource AccentRedBrush}" FontWeight="SemiBold" FontSize="13" Margin="12,0,0,0">
                                        <Run Text="- "/>
                                        <Run Text="{Binding ResultRedHours, Mode=OneWay, Converter={StaticResource HoursFormat}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <!-- Result timeline cells -->
                            <ItemsControl ItemsSource="{Binding ResultCells}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1" Columns="48"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding IsActive, Converter={StaticResource BoolToCellBrush}}"
                                                Height="36"
                                                Margin="0.5,0"
                                                CornerRadius="2"
                                                ToolTip="{Binding TimeLabel}"
                                                SnapsToDevicePixels="True">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.15" Color="Black"/>
                                            </Border.Effect>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Time ruler -->
                            <ItemsControl Margin="0,4,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1" Columns="24"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.Items>
                                    <TextBlock Text="0" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="1" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="2" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="3" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="4" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="5" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="6" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="7" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="8" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="9" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="10" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="11" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="12" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="13" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="14" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="15" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="16" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="17" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="18" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="19" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="20" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="21" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="22" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                    <TextBlock Text="23" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                </ItemsControl.Items>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Separator -->
                    <Border Grid.Row="1"
                            Height="1"
                            Background="{StaticResource BorderBrush}"
                            Margin="0,4,0,20"/>

                    <!-- ======== LAYERS SECTION ======== -->
                    <StackPanel Grid.Row="2">
                        <!-- Timeline layers list -->
                        <ItemsControl x:Name="LayersListBox"
                                      ItemsSource="{Binding Layers}"
                                      Margin="0,0,0,8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BgCardBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="20,14"
                                            Margin="0,0,0,12"
                                            AllowDrop="True"
                                            Tag="{Binding}">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.15" Color="Black"/>
                                        </Border.Effect>
                                        <StackPanel>
                                            <!-- Layer header -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Drag handle -->
                                                <TextBlock Grid.Column="0"
                                                           Text="â ¿"
                                                           FontSize="18"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           VerticalAlignment="Center"
                                                           Cursor="SizeAll"
                                                           Margin="0,0,8,0"
                                                           MouseLeftButtonDown="DragHandle_MouseDown"/>

                                                <!-- Title + stats -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                             FontSize="14" FontWeight="SemiBold"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Foreground="{StaticResource AccentGreenBrush}" FontSize="12">
                                                            <Run Text="+ "/>
                                                            <Run Text="{Binding GreenHours, Mode=OneWay, Converter={StaticResource HoursFormat}}"/>
                                                        </TextBlock>
                                                        <TextBlock Foreground="{StaticResource AccentRedBrush}" FontSize="12" Margin="10,0,0,0">
                                                            <Run Text="- "/>
                                                            <Run Text="{Binding RedHours, Mode=OneWay, Converter={StaticResource HoursFormat}}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Filter type selector -->
                                                <ComboBox Grid.Column="2"
                                                          ItemsSource="{Binding FilterTypes}"
                                                          SelectedItem="{Binding SelectedFilter}"
                                                          VerticalAlignment="Center"
                                                          Margin="8,0"
                                                          Width="120">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Converter={StaticResource FilterTypeToString}}"/>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                                <!-- Delete button -->
                                                <Button Grid.Column="3"
                                                        Style="{StaticResource DeleteButton}"
                                                        Command="{Binding DeleteCommand}"
                                                        VerticalAlignment="Center"
                                                        Padding="6,4">
                                                    <TextBlock Text="ðŸ—‘" FontSize="15"/>
                                                </Button>
                                            </Grid>

                                            <!-- Shift buttons + cells -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Left shift buttons -->
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,6,0">
                                                    <Button Style="{StaticResource IconButton}"
                                                            Command="{Binding ShiftLeftDoubleCommand}"
                                                            ToolTip="Shift left by 1 hour">
                                                        <TextBlock Text="âŸª" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButton}"
                                                            Command="{Binding ShiftLeftCommand}"
                                                            ToolTip="Shift left by 30 min">
                                                        <TextBlock Text="â€¹" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    </Button>
                                                </StackPanel>

                                                <!-- Timeline cells -->
                                                <ItemsControl Grid.Column="1" ItemsSource="{Binding Cells}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <UniformGrid Rows="1" Columns="48"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{Binding IsActive, Converter={StaticResource BoolToCellBrush}}"
                                                                    Height="32"
                                                                    Margin="0.4,0"
                                                                    CornerRadius="2"
                                                                    ToolTip="{Binding TimeLabel}"
                                                                    SnapsToDevicePixels="True"
                                                                    Cursor="Hand"
                                                                    MouseLeftButtonDown="Cell_MouseLeftButtonDown"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Right shift buttons -->
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0,0,0">
                                                    <Button Style="{StaticResource IconButton}"
                                                            Command="{Binding ShiftRightCommand}"
                                                            ToolTip="Shift right by 30 min">
                                                        <TextBlock Text="â€º" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButton}"
                                                            Command="{Binding ShiftRightDoubleCommand}"
                                                            ToolTip="Shift right by 1 hour">
                                                        <TextBlock Text="âŸ«" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Add timeline button -->
                        <Button Style="{StaticResource AccentButton}"
                                Command="{Binding AddTimelineCommand}"
                                HorizontalAlignment="Center"
                                Padding="24,10"
                                Margin="0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ï¼‹" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Add Timeline" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- ======== OVERVIEW PANEL ======== -->
        <Border Grid.Column="2"
                Background="{StaticResource BgSidebarBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Overview"
                           FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="20,20,20,16"/>

                <!-- Overview placeholder -->
                <Border Grid.Row="1" Margin="20,0,20,20"
                        Background="{StaticResource BgCardBrush}"
                        CornerRadius="10"
                        Padding="16">
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="Summary"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,12"/>

                        <!-- Mini overview bars - placeholders -->
                        <Border Height="6" CornerRadius="3"
                                Background="#2A2A3A" Margin="0,0,0,8"/>
                        <Border Height="6" CornerRadius="3"
                                Background="#2A2A3A" Margin="0,0,60,8"/>
                        <Border Height="6" CornerRadius="3"
                                Background="#2A2A3A" Margin="0,0,30,16"/>

                        <TextBlock Text="Overview features coming soon..."
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
